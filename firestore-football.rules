rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      // Note: This checks the users collection in the DEFAULT database
      // Make sure admin status is stored in the default database
      return request.auth != null &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }

    // ========================================================================
    // FOOTBALL GAME COLLECTIONS
    // ========================================================================

    // Football Games - admins can create/update, all authenticated users can read
    match /games/{gameId} {
      allow read: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Football Game Participants - players can join games, read their own data
    match /gameParticipants/{participantId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null &&
                      (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Football Teams data - authenticated users can read
    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if isAdmin(); // Only admins can modify team data
    }

    // Football Players data - authenticated users can read
    match /players/{playerId} {
      allow read: if request.auth != null;
      allow write: if isAdmin(); // Only admins can modify player data
    }

    // Football Matches/Fixtures - authenticated users can read
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Football Player Picks - players can create and update their own picks
    match /playerPicks/{pickId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null &&
                      resource.data.userId == request.auth.uid &&
                      !resource.data.locked; // Cannot update if locked
      allow delete: if isAdmin();
    }

    // Football Leagues/Competitions - authenticated users can read
    match /competitions/{competitionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Football Standings - authenticated users can read
    match /standings/{standingId} {
      allow read: if request.auth != null;
      allow write: if false; // Only server-side access
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
